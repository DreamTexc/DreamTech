<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Manifest Viewer</title>
  <style>
    pre {
      background: #111;
      color: #0f0;
      padding: 20px;
      border-radius: 8px;
      font-size: 14px;
      white-space: pre-wrap;
    }
  </style>
</head>
<body>
  <pre id="output"></pre>

  <script>
    const manifestText = `
{
  "manifest_version": 3,
  "name": "DreamJump Extension",
  "version": "1.0",
  "description": "Chrome extension for the DreamJump portal",
  "permissions": ["activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
    `;
    document.getElementById("output").textContent = manifestText;
  </script>
</body>
</html>
